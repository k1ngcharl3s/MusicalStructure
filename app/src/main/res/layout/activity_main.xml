<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="@dimen/padding_bottom"
        android:paddingTop="@dimen/padding_top">
        <ImageView
            android:id="@+id/tupac"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/layout_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/tupac1"/>
        <ImageView
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="@dimen/layout_height_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="@dimen/margin"
            android:src="@drawable/baseline_play_arrow_black_24dp" />
        <ImageView
            android:id="@+id/christinaaguilera"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tupac"
            android:padding="@dimen/padding"
            android:scaleType="centerCrop"
            android:src="@drawable/christinaaguilera"/>
        <ImageView
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="@dimen/layout_height_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="@dimen/margin_top"
            android:src="@drawable/baseline_play_circle_filled_white_black_18dp" />
        <ImageView
            android:id="@+id/evanescence"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/christinaaguilera"
            android:padding="@dimen/padding"
            android:src="@drawable/evanescene"/>
        <ImageView
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="@dimen/layout_height_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="@dimen/margin_top_2"
            android:src="@drawable/baseline_play_arrow_black_24dp" />
        <ImageView
            android:id="@+id/isleybrothers"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/evanescence"
            android:padding="@dimen/padding"
            android:src="@drawable/isleybrothers"/>
        <ImageView
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="@dimen/layout_height_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="@dimen/margin_top_3"
            android:src="@drawable/baseline_play_arrow_black_24dp" />
    </RelativeLayout>
</ScrollView>
